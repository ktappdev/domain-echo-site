---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  keywords?: string;
  ogImage?: string;
  ogType?: string;
  canonicalUrl?: string;
}

const {
  title,
  description = "Anonymous, real-time chat rooms for every website you visit. Turn every domain into a community with Domain Echo - free Chrome extension.",
  keywords = "chrome extension, anonymous chat, real-time chat, domain chat, website chat, privacy chat, free chat extension, browser extension, social browsing",
  ogImage = "/logo.jpg",
  ogType = "website",
  canonicalUrl = Astro.url.pathname
} = Astro.props;

const siteUrl = Astro.site || "https://domainecho.com";
const fullCanonicalUrl = new URL(canonicalUrl, siteUrl).href;
const fullOgImage = new URL(ogImage, siteUrl).href;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="Domain Echo" />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="English" />
    <meta name="revisit-after" content="7 days" />

    <!-- Canonical URL -->
    <link rel="canonical" href={fullCanonicalUrl} />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/logo.png" />
    <link rel="apple-touch-icon" href="/logo.png" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={fullCanonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullOgImage} />
    <meta property="og:site_name" content="Domain Echo" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={fullCanonicalUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={fullOgImage} />

    <!-- Additional SEO -->
    <meta name="theme-color" content="#4f46e5" />
    <meta name="generator" content={Astro.generator} />

    <!-- Schema.org JSON-LD -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      "name": "Domain Echo",
      "applicationCategory": "BrowserExtension",
      "operatingSystem": "Chrome, Edge, Brave",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      },
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "5",
        "ratingCount": "1"
      },
      "description": description,
      "image": fullOgImage,
      "url": fullCanonicalUrl
    })} />
  </head>
  <body class="bg-slate-950 text-slate-100">
    <!-- Navigation -->
    <nav class="border-b border-slate-800 sticky top-0 bg-slate-950/95 backdrop-blur-sm z-50">
      <div class="container mx-auto px-4 py-4">
        <div class="flex justify-between items-center">
          <a href="/" class="flex items-center gap-3 text-xl font-bold hover:opacity-80 transition">
            <img src="/logo.png" alt="Domain Echo Logo" class="w-10 h-10 rounded-lg" />
            <span>Domain Echo</span>
          </a>
          <div class="flex gap-6 items-center">
            <a href="/" class="hover:text-indigo-400 transition">Home</a>
            <a href="/about" class="hover:text-indigo-400 transition">About</a>
            <a href="/privacy" class="hover:text-indigo-400 transition">Privacy</a>
            <a href="/terms" class="hover:text-indigo-400 transition">Terms</a>
            <a href="#install" class="bg-indigo-600 hover:bg-indigo-700 px-4 py-2 rounded-lg transition font-semibold">
              Install
            </a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-slate-800 mt-20">
      <div class="container mx-auto px-4 py-12">
        <div class="grid md:grid-cols-4 gap-8">
          <div>
            <div class="flex items-center gap-3 text-xl font-bold mb-4">
              <img src="/logo.png" alt="Domain Echo Logo" class="w-10 h-10 rounded-lg" />
              <span>Domain Echo</span>
            </div>
            <p class="text-slate-400 text-sm">
              Chat with anyone, anywhere on the web. Anonymous, real-time conversations for every domain.
            </p>
          </div>
          <div>
            <h3 class="font-semibold mb-4">Product</h3>
            <ul class="space-y-2 text-slate-400 text-sm">
              <li><a href="/" class="hover:text-indigo-400 transition">Home</a></li>
              <li><a href="/about" class="hover:text-indigo-400 transition">About</a></li>
              <li><a href="#install" class="hover:text-indigo-400 transition">Install</a></li>
            </ul>
          </div>
          <div>
            <h3 class="font-semibold mb-4">Legal</h3>
            <ul class="space-y-2 text-slate-400 text-sm">
              <li><a href="/privacy" class="hover:text-indigo-400 transition">Privacy Policy</a></li>
              <li><a href="/terms" class="hover:text-indigo-400 transition">Terms of Service</a></li>
            </ul>
          </div>
          <div>
            <h3 class="font-semibold mb-4">Connect</h3>
            <ul class="space-y-2 text-slate-400 text-sm">
              <li><a href="https://github.com" class="hover:text-indigo-400 transition">GitHub</a></li>
              <li><a href="https://twitter.com" class="hover:text-indigo-400 transition">Twitter</a></li>
            </ul>
          </div>
        </div>
        <div class="border-t border-slate-800 mt-8 pt-8 text-center text-slate-400 text-sm">
          <p>&copy; 2026 Domain Echo. Making the web more social, one domain at a time.</p>
        </div>
      </div>
    </footer>
  </body>
</html>

